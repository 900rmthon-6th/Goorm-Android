<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data></data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".presentation.joblist.JobListActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--            이런 수눌음이 잘 맞을 거 같아요!-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sunulblack"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="이런 수눌음이 \n잘 맞을 거 같아요!"
                        android:textSize="24dp"
                        android:lineHeight="32dp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineHeight="18dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/textcolor"
                        android:text="이런 수눌음이 잘 맞을 거 같아요. \n이런 수눌음이 잘 맞을 거 같아요."
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--            제주 여행에서 수눌음은 어때요?-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                    tools:layout_editor_absoluteX="0dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sunulblack"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="제주 여행에서 수눌음은 어때요?"
                        android:textSize="18dp"
                        android:lineHeight="24dp"
                        android:paddingBottom="10dp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sunulblack"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="수눌음이란 단순한 협력의 의미를 넘어 함께의 가치를 실현하고 제주도의 공동 노동 문화를 의미하는 고유어예요. \n수눌수눌은 일손이 부족한 제주의 방문 장소를 제안해요. \n이번 제주 여행은 수눌음 경험을 통해 제주에서 뜻깊은 경험을 만들어가는 건 어떠세요?"
                        android:textSize="14dp"
                        android:lineHeight="18dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--            여기가 Job List가 들어갈 자리입니다-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_radius"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintTop_toTopOf="parent">

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--            버튼-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
                    app:layout_constraintVertical_bias="1.0"
                    tools:layout_editor_absoluteX="0dp">

                    <Button
                        android:id="@+id/test_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_radius_color"
                        android:fontFamily="@font/pretendard_medium"
                        android:paddingVertical="@dimen/btn_padding_vertical"
                        android:text="검사 다시 해보기"
                        android:textSize="18dp"
                        app:layout_constraintBaseline_toBottomOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>