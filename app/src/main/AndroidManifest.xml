<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.ApplicationClass"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/splash_img2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splash_img2"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sunul"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".presentation.joblist.JobListActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.result.ResultActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity

            android:name=".presentation.prologue.PrologueActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.intro.IntroActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:exported="false"
            android:theme="@style/Theme.Sunul">
        <activity
            android:name=".presentation.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing">
        </activity>
    </application>

</manifest>